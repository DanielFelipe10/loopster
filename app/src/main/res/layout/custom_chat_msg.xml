<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="3dp">

    <!-- receive user -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/receiver_chat_user_image"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/perfil" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/receiver_chat_user_image"
        android:layout_marginEnd="20dp">

        <TextView
            android:id="@+id/receiver_chat_user_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:layout_margin="2dp"
            android:padding="7dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/receiver_shape"/>

        <TextView
            android:id="@+id/receiver_chat_user_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="time"
            android:textSize="10dp"
            android:layout_margin="2dp"
            />
    </LinearLayout>


    <!-- sender user -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/sender_chat_user_image"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_alignParentRight="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/perfil" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:layout_toLeftOf="@id/sender_chat_user_image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sender_chat_user_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:layout_margin="2dp"
            android:background="@drawable/sender_shape"
            android:padding="7dp"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sender_chat_user_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:layout_margin="2dp"
            android:text="time"
            android:textSize="10dp" />


    </LinearLayout>


</RelativeLayout>
